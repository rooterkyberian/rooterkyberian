root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.py]
indent_size = 4
max_line_length = 88
profile = black

[*.{js,html,scss,less,ts,tsx,yaml,yml}]
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
